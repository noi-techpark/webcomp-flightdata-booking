  "image": "wcs-logo.png",
  "searchTags": [
    "flights"
  ],
  "dist": {
    "basePath": "dist",
    "files": [
      "noi-flightdata-booking.min.js"
    ],
    "scripts": [
      {
        "file": "noi-flightdata-booking.min.js",
        "parameter": ""
      }
    ]
  },
  "configuration": {
    "tagName": "noi-flightdata-booking",
    "options": [
      {
        "key": "language",
        "type": "select",
        "label": "Two letter key for the language to be used. Fallback is `en`",
        "required": false,
        "options": {
          "values": [
            "en",
            "de",
            "it"
          ],
          "default": "en"
        }
      },
      {
        "key": "theme",
        "type": "select",
        "label": "Color presets",
        "options": {
          "values": [
            "OpenDataHub",
            "skyalps"
          ],
          "default": "OpenDataHub"
        }
      },
      {
        "key": "id",
        "type": "text",
        "label": "Unique Element Id (required if styleurl is used)",
        "required": false,
        "options": {
          "default": "fligtdata-booking"
        }
      },
      {
        "key": "styleurl",
        "type": "text",
        "label": "External Stylesheet Url (...with cors enabled)",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "timezone",
        "type": "text",
        "label": "The local timezone.",
        "required": false,
        "options": {
          "default": "Europe/Berlin"
        }
      },
      {
        "key": "maxforecast",
        "type": "text",
        "label": "Max entries to show",
        "required": false,
        "options": {
          "default": "10"
        }
      }    
    ]
  }
}
